<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:clipChildren="false"
	android:duplicateParentState="true"
	android:focusable="false"
	android:orientation="vertical"
	android:paddingBottom="2dp"
	android:paddingTop="2dp">

	<ImageView
		android:id="@+id/application_icon"
		android:layout_width="@dimen/application_drawable_size"
		android:layout_height="@dimen/application_drawable_size"
		android:duplicateParentState="true"
		android:focusable="false"
		android:src="@drawable/ic_add"
		android:stateListAnimator="@animator/selection"
		app:layout_constraintBottom_toTopOf="@+id/application_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/application_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:duplicateParentState="true"
		android:focusable="false"
		android:gravity="center_horizontal"
		android:maxLines="1"
		android:shadowColor="#ff000000"
		android:shadowDx="1"
		android:shadowDy="1"
		android:shadowRadius="0.5"
		android:textAlignment="center"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="@android:color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>